<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
<h1> Hooray! </h1>
<h2> This page will show all the games </h2>
<div class="imgdiv">
  <tbody>
    <% @games.each do |game| %>

      <tr>
      <td><%= image_tag game.picture if game.picture.attached? %> </td>
      <td>     <%= game.title %> </td>

        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Game', new_game_path %>
